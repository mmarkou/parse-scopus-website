<Window x:Class="MariaParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox Name="txtKeimeno" TextWrapping="Wrap" Text="" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox Name="txtResult" TextWrapping="Wrap" Text="" Grid.Row="1" Grid.Column="0" Margin="5"/>
        <Button x:Name="btnAction"  Grid.Row="2" Grid.Column="0" Content="Action!"  Margin="5,5,241,5" Click="btnAction_Click" />
    </Grid>
</Window>
